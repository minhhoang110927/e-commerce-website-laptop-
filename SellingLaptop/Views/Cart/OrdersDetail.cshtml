@{
    ViewData["Title"] = "Orders Detail";
}

<h4>Orders Detail</h4>
<dl class="row">
    <dt class="col-sm-2">
        OrderDate
    </dt>
    <dd class="col-sm-10">
        @ViewBag.ThisOrders.OrderDate
</dd>
<dt class="col-sm-2">
    CustomerName
</dt>
<dd class="col-sm-10">
    @ViewBag.ThisOrders.CustomerName
</dd>
<dt class="col-sm-2">
    CustomerPhone
</dt>
<dd class="col-sm-10">
    @ViewBag.ThisOrders.CustomerPhone
</dd>
<dt class="col-sm-2">
    CustomerAddress
</dt>
<dd class="col-sm-10">
    @ViewBag.ThisOrders.CustomerAddress
</dd>
<dt class="col-sm-2">
    Total
</dt>
<dd class="col-sm-10">
    @ViewBag.ThisOrders.Total
</dd>
<dt class="col-sm-2">
    Status
</dt>
<dd class="col-sm-10">
    @ViewBag.ThisOrders.Status
</dd>
</dl>
<table class="table">
    <thead>
        <tr>
            <th>
                Laptop Name
            </th>
            <th>
                Image
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.OrdersDetailList)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Product.ProductImage</td>
                <td>@item.Product.ProductPrice</td>
            </tr>
        }
    </tbody>
</table>
